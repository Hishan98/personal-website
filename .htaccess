RewriteEngine on

#-Index-----------------------------------------------------------------------------------
RewriteRule ^index$  index.php [NC,L]
#-----------------------------------------------------------------------------------

#-Pages-----------------------------------------------------------------------------------
RewriteRule ^projects$  views/project.php [NC,L]
#-----------------------------------------------------------------------------------

#-phpMailer-----------------------------------------------------------------------------------
RewriteRule ^controller-mailer$  controllers/mailer.php [NC,L]
#-----------------------------------------------------------------------------------

# Return 404 if original request is .php
RewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$"
RewriteRule .* - [L,R=404]

ErrorDocument 404 /views/404.php